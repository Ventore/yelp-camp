<% include ../partials/header %>

<div class='container'>
  <header class='jumbotron'>
    <div class='container'>
      <h1>Welcome to the Yelp Camp</h1>
      <h3>This is our favourite campgrounds</h3>
      <a class="btn btn-large btn-primary" href="/campgrounds/new">Add new campground</a>
    </div>
  </header>
  

  <div class=row style="display:flex; flex-wrap:wrap">
  <% campgrounds.forEach(function(camp) { %>
    <div class="col-md-3 col-sm-6">
      <div class="img-responsive thumbnail">
        <img src='<%= camp.image %>'>
        <div class="caption">
          <h4><%= camp.name %></h4>
        </div>
        <p>
          <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More info</a>
        </p>
      </div>
    </div>
  <% }); %>
  </div>

</div>

<% include ../partials/footer %>