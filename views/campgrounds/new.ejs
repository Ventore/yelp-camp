<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Create a capmground</h1>
    <div style="width: 30%; margin: 0 auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text", name="capmgroundName" placeholder="Campground name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number", name="capmgroundPrice" placeholder="Campground price per night" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control"  type="text" name="capmgroundImage" placeholder="Enter Image URL">
        </div>
        <div class="form-group">
          <input class="form-control"  type="text" name="capmgroundDescription" placeholder="Enter Description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>